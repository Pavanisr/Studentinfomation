@page
@model Studentinfomation.Pages.students.IndexModel
@{
}

<br>
<h1>List of students</h1>
<a class="btn btn-primary btn-sm" href="/students/create">New student</a>
<table class="table">
    <thead>
        <tr>
            <th>student_id</th>
            <th>name</th>
            <th>city</th>
            <th>course_id</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.liststudents)
        {
            <tr>
                <td>@item.student_id</td>
                <td>@item.name</td>
                <td>@item.city</td>
                <td>@item.course_id</td>
                <td>
                    <a class="btn btn-primary btn-sm" href="/students/Edit?student_id=@item.student_id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/students/Delete?student_id=@item.student_id">Delete</a>
                </td>

            </tr>
        }
    </tbody>
</table>
